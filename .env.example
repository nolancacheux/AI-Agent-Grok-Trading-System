# =============================================================================
# GROK TRADING BOT - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# GROK API (xAI)
# =============================================================================
# Get your API key from: https://console.x.ai/
XAI_API_KEY=xai-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Model configuration
XAI_MODEL=grok-beta
XAI_MAX_TOKENS=4096
XAI_TEMPERATURE=0.7

# =============================================================================
# INTERACTIVE BROKERS
# =============================================================================
# Gateway connection
IBKR_HOST=127.0.0.1
IBKR_PORT=4002
IBKR_CLIENT_ID=1

# Account (Paper trading account starts with "DU")
IBKR_ACCOUNT=DU1234567

# Paper trading credentials (for IBC auto-login)
IBKR_USERNAME=your_paper_username
IBKR_PASSWORD=your_password

# Trading mode: paper or live (use paper for testing!)
IBKR_TRADING_MODE=paper

# =============================================================================
# APPLICATION
# =============================================================================
# Environment: development, staging, production
APP_ENV=development

# Logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Initial cash for paper trading (USD)
INITIAL_CASH=1000.00

# Trading interval in minutes (30 = every 30 minutes)
TRADING_INTERVAL_MINUTES=30

# Maximum portfolio allocation per trade (0.95 = 95%)
MAX_ALLOCATION=0.95

# Stop loss percentage (-0.20 = -20%)
STOP_LOSS_PERCENT=-0.20

# =============================================================================
# BACKEND API
# =============================================================================
# Server configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://trading.yourdomain.com

# Secret key for JWT (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-this-in-production

# =============================================================================
# FRONTEND
# =============================================================================
# API URL (for frontend to call backend)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# =============================================================================
# DATABASE
# =============================================================================
# SQLite (default for local development)
DATABASE_URL=sqlite:///./data/trading.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/grok_trading

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Domain for SSL (used by Caddy)
DOMAIN=trading.yourdomain.com

# =============================================================================
# OPTIONAL: MARKET DATA PROVIDERS
# =============================================================================
# Yahoo Finance (free, default)
# No API key required

# Alpha Vantage (free tier available)
# ALPHA_VANTAGE_API_KEY=your_api_key

# Polygon.io (paid, real-time data)
# POLYGON_API_KEY=your_api_key

# =============================================================================
# OPTIONAL: NOTIFICATIONS
# =============================================================================
# Discord webhook for alerts
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy

# Telegram bot for alerts
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id

# =============================================================================
# OPTIONAL: MONITORING
# =============================================================================
# Sentry for error tracking
# SENTRY_DSN=https://xxx@sentry.io/yyy
